<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1ECFE"
    android:orientation="vertical"
    tools:context=".QuizIntroActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center|right">

        <TextView
            android:id="@+id/tvQT"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:fontFamily="@font/font"
            android:gravity="center|left"
            android:text="0/10"
            android:textColor="#1B73E9"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/btnPassTA"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/font"
            android:gravity="center"
            android:text="PASS"
            android:textColor="#1b73e9"
            android:textSize="30dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textTA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font"
            android:gravity="center"
            android:textColor="#1b73e9"
            android:textSize="50dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivTA"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/countdownsky" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <ImageButton
            android:id="@+id/voiceBtnTA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#1B73E9"
            app:srcCompat="@drawable/xmlskymic" />
    </LinearLayout>

</LinearLayout>